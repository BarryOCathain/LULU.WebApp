@model List<LULU.Model.Course>

@{ 
    ViewBag.TItle = "Manage Courses";
}

<h1>Courses</h1>

<table>
    <tr>
        <th class="table-bordered">Course Code</th>
        <th class="table-bordered">Name</th>
    </tr>
    @if (Model != null)
    {
        foreach (var course in Model)
        {
            <tr>
                <td class="table-bordered">@course.CourseCode</td>
                <td class="table-bordered">@course.Name</td>
                <td class="table-bordered" style="border:none;"><b><a href="Course/View/@course.CourseID">View</a></b></td>
                <td class="table-bordered" style="border:none;"><b><a href="Course/Edit/@course.CourseID">Edit</a></b></td>
                @*<td class="table-bordered" style="border:none;"><b><a href="Course/Delete/@course.CourseID">Delete</a></b></td>*@
                <td class="table-bordered" style="border:none;"><b>@Html.ActionLink("Delete", "Delete", new { id = course.CourseID }, 
                                                               new { onclick = "return confirm('Are you sure that you want to delete this Course?');" })</b>
                </td>
            </tr>
        }
    }
</table>
<br />
<a href="Course/New" class="btn btn-default">New Course</a>

