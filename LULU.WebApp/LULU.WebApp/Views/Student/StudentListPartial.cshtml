@model List<LULU.Model.Student>

@{ 
    ViewBag.Title = "Students";
}

<table>
    <tr>
        <th class="table-bordered">Student Number</th>
        <th class="table-bordered">First Name</th>
        <th class="table-bordered">Surname</th>
        <th class="table-bordered">Email</th>
    </tr>
    @if (Model != null)
    {
        foreach (var student in Model)
        {
            <tr>
                <td class="table-bordered">@student.StudentNumber</td>
                <td class="table-bordered">@student.FirstName</td>
                <td class="table-bordered">@student.Surname</td>
                <td class="table-bordered">@student.Email</td>
                <td><a href="Student/Details/@student.UserID"><b>View Details</b></a></td>
                <td><a href="/Student/Edit/@student.UserID"><b>Edit</b></a></td>
                <td><b>@Html.ActionLink("Delete", "Delete", new { studentNumber = student.StudentNumber }, 
                      new { onclick = "return confirm('Are you sure that you want to delete this Student?')" })</b></td>
            </tr>
        }
    }
</table>
